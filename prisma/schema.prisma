generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Social {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  link      String
  icon      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  position    String
  status      String
  invite      String
  guildId     String?
  icon        String?
  memberCount Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Blacklists {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
